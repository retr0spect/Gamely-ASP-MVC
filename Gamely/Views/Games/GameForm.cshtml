@model Gamely.ViewModels.GameFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Game == null)
{
    <h2>New Game</h2>
}
else
{
    <h2>Edit Game</h2>
}


@using (Html.BeginForm("Save", "Games"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Game.Name)
        @Html.TextBoxFor(m => m.Game.Name, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Game.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Game.ReleaseDate)
        @Html.TextBoxFor(m => m.Game.ReleaseDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Game.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Game.GenreId)
        @Html.DropDownListFor(m =>m.Game.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Game.NumberInStock)
        @Html.TextBoxFor(m => m.Game.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Game.NumberInStock)
    </div>
    @Html.HiddenFor(m => m.Game.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}


